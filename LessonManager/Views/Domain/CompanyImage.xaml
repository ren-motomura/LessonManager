<UserControl x:Class="LessonManager.Views.Domain.CompanyImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LessonManager.Views.Domain"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <Border Height="150" Width="150" CornerRadius="75">
            <Border.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="{Binding ImageLink}"/>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
